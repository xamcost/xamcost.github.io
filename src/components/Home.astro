<style>
  #home-hero {
    display: flex;
    justify-content: center;
    text-align: justify;
    align-items: center;
    height: 100%;
  }

  #home-intro {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 4vw;
    gap: 2em;
  }

  #home-portrait {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2em;
  }

  @media (max-width: 1000px) {
    #home-container {
      margin: 5em 5vw 0 5vw;
    }

    #home-hero {
      flex-direction: column;
      align-items: center;
    }

    #home-intro {
      padding-left: 0vw;
      gap: 0em;
    }

    #home-portrait {
      width: 50%;
    }
  }

  #portrait {
    width: 100%;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    border-radius: 50%;
  }

  #links {
    display: flex;
    gap: 16px;
  }

	#links a {
		color: #111827;
		text-decoration: none;
		transition: color 0.2s;
	}

	#links a svg {
		height: 3em;
		margin-left: 8px;
	}

  #links a svg path {
    fill: #f7f7f7;
  }

	#links a:hover svg path {
    fill: #7aa2f7;
	}

  h1 {
    font-size: 22px;
    margin-top: 0.5em;
    color: #7aa2f7;
  }

  p {
    color: #f7f7f7;
  }

  p a {
    color: #bb9af7;
  }

  p a:hover {
    color: #b4f9f8;
  }
</style>
