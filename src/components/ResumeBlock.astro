---

<main id="resume-container">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
  <h1 id="experiences-header">
    Experiences
  </h1>
  <hr />
  {experiences.map((exp) => <ExperienceItem role={exp.role} company={exp.company} start={exp.start} end={exp.end} location={exp.location} tasks={exp.tasks} />)}
  <h1 id="education-header">
    Education
  </h1>
  <hr />
  {education.map((exp) => <ExperienceItem role={exp.role} company={exp.company} start={exp.start} end={exp.end} location={exp.location} tasks={exp.tasks} />)}
  <h1 id="skill-header">
    Skills
  </h1>
  <hr />
  <div id="skills-container">
    {Object.entries(skills).map(([category, skills]) => (
      <div id="skills-category">
        <h2>{category}</h2>
        <ul id="skills-list">
          {skills.map((skill) => (
            <li>
              <div id="skills-label">
                {skill?.icon && <i class={`fa ${skill.icon}`}></i>}
                <span>{skill.skill}</span>
              </div>
              {skill?.details && <p>{skill.details}</p>}
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</main>

<style>
  #resume-container h1 {
    color: #7aa2f7;
    margin-bottom: 0em;
  }

  #resume-container hr {
    border: 1px solid #7aa2f7;
  }

  #skills-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    justify-content: center;
  }

  @media (max-width: 800px) {
    #skills-container {
      grid-template-columns: 1fr;
    }
  }

  #skills-category {
    margin: 1em;
    padding: 1em;
    border: 1px solid #7aa2f7;
    border-radius: 5px;
  }

  #skills-category h2 {
    color: #bb9af7;
  }

  #skills-list {
    list-style-type: none;
    padding: 0;
  }

  #skills-list li {
    color: #c0caf5;
  }

  #skills-label {
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  #skills-label i {
    width: 2em;
    color: #b4f9f8;
  }

  #skills-label span {
    color: #b4f9f8;
  }

  #skills-list p {
    font-style: italic;
    margin-top: 0em;
  }

</style>
